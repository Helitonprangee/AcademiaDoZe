<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AcademiaDoZe.Presentation.AppMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AcademiaDoZe.Presentation.AppMaui.Views"
    Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <VerticalStackLayout Padding="10" Spacing="10" BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Black}}">
            <Image Source="logo_academia.png" HeightRequest="100" HorizontalOptions="Center" />
            <Label Text="Academia do Zé" FontSize="Large" HorizontalOptions="Center" TextColor="White" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <ShellContent
        Title="Dashboard"
        Icon="{FontImageSource FontFamily=MaterialIcons, Glyph=&#xe871;}"
        ContentTemplate="{DataTemplate views:DashboardListPage}"
        Route="dashboard" />
    <FlyoutItem Title="Cadastros"
                Icon="{FontImageSource FontFamily=MaterialIcons, Glyph=&#xe065;}">

        <ShellContent
            Title="Alunos"
            Icon="{FontImageSource FontFamily=MaterialIcons, Glyph=&#xe7ef;}"
            ContentTemplate="{DataTemplate views:AlunoListPage}"
            Route="alunos" />

        <ShellContent
            Title="Colaboradores"
            Icon="{FontImageSource FontFamily=MaterialIcons, Glyph=&#xea67;}"
            ContentTemplate="{DataTemplate views:ColaboradorListPage}" 
            Route="colaboradores" />

        <ShellContent
            Title="Logradouros"
            Icon="{FontImageSource FontFamily=MaterialIcons, Glyph=&#xe7f1;}"
            ContentTemplate="{DataTemplate views:LogradouroListPage}"
            Route="logradouros" />
    </FlyoutItem>
    <ShellContent
        Title="Configurações"
        Icon="{FontImageSource FontFamily=MaterialIcons, Glyph=&#xe8b8;}"
        ContentTemplate="{DataTemplate views:ConfigPage}" 
        Route="configuracoes"/>
</Shell>