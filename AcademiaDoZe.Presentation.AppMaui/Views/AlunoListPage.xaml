<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AcademiaDoZe.Presentation.AppMaui.Views.AlunoListPage"
             xmlns:viewmodels="clr-namespace:AcademiaDoZe.Presentation.AppMaui.ViewModels"
             xmlns:dtos="clr-namespace:AcademiaDoZe.Application.DTOs;assembly=AcademiaDoZe.Application"
             xmlns:converters="clr-namespace:AcademiaDoZe.Presentation.AppMaui.Converters"
             x:DataType="viewmodels:AlunoListViewModel"
             Title="Alunos">

    <ContentPage.Resources>
        <converters:FotoToImageSourceConverter x:Key="FotoToImageSourceConverter" />
        <DataTemplate x:Key="AlunoItemTemplate" x:DataType="dtos:AlunoDTO">
            <Grid Padding="1" Margin="5">
                <Border Style="{StaticResource CardBorder}" Margin="10">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" ColumnDefinitions="*,Auto,Auto">

                        <Button Grid.Row="0" Grid.Column="1" Text="" Style="{StaticResource ButtonSmall}" Margin="4,0" Clicked="OnAlunoEditButtonClicked">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe3c9;" />
                            </Button.ImageSource>
                        </Button>
                        <Button Grid.Row="0" Grid.Column="2" Text="" Style="{StaticResource ButtonDanger}" Margin="4,0" Clicked="OnAlunoDeleteButtonClicked">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe872;" />
                            </Button.ImageSource>
                        </Button>

                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Nome}" FontAttributes="Bold" Margin="0,0,0,5"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="{Binding Cpf}" Margin="0,0,0,5"/>

                        <Image Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="4"
                               Source="{Binding Foto, Converter={StaticResource FotoToImageSourceConverter}}" 
                               Aspect="AspectFill" Margin="0,0,10,0" HeightRequest="110" WidthRequest="110"
                               VerticalOptions="Start"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="{Binding Telefone}" Margin="0,0,0,5"/>
                        <Label Grid.Row="3" Grid.Column="0" Text="{Binding Email}" Margin="0,0,0,5"/>

                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        <SearchBar Grid.Row="0"
                   Placeholder="Buscar aluno por nome ou CPF..."
                   Text="{Binding SearchText}"
                   SearchCommand="{Binding SearchAlunosCommand}"
                   Margin="10"/>

        <Grid Grid.Row="1">
            <RefreshView IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCommand}">
                <CollectionView ItemsSource="{Binding Alunos}" SelectionMode="None" Margin="10">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical">
                            <GridItemsLayout.Span>
                                <OnIdiom x:TypeArguments="x:Int32">
                                    <OnIdiom.Phone>1</OnIdiom.Phone>
                                    <OnIdiom.Default>1</OnIdiom.Default>
                                    <OnIdiom.Tablet>2</OnIdiom.Tablet>
                                    <OnIdiom.Desktop>3</OnIdiom.Desktop>
                                </OnIdiom>
                            </GridItemsLayout.Span>
                        </GridItemsLayout>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <StaticResource Key="AlunoItemTemplate" />
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>

            <ImageButton Command="{Binding AddAlunoCommand}"
                         HeightRequest="56"
                         WidthRequest="56"
                         CornerRadius="28"
                         HorizontalOptions="End"
                         VerticalOptions="End"
                         Margin="20"
                         BackgroundColor="{StaticResource Primary}">
                <ImageButton.Source>
                    <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe145;" Color="White" />
                </ImageButton.Source>
            </ImageButton>

        </Grid>

        <ActivityIndicator Grid.Row="0" Grid.RowSpan="2" IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" VerticalOptions="Center" HorizontalOptions="Center"/>
    </Grid>
</ContentPage>